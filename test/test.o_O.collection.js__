o_O.klass = ('Prop', {})

Human = o_O.klass({
  firstName: 'john',
  secondName: 'smith',
  age: 0,
  fullName: function() {
    return this.firstName() + this.secondName() 
  },
  isAdult: function() {
    return this.age() >= 18
  }
})


people = o_O.collection()

people.adults = o_O.property(function() {  
  // read only
  return this.filter(function(person) {
    return person.isAdult()
  })
})  => notify people ?


people.on('change:age', function() {
  people.adults.calculate()
})
  
people.add = function(person) {
  var people = this
  // add
  for(var prop in person) {
    person[prop].observe(function() {
      people.emit('change:'+prop)
    })
  }
}